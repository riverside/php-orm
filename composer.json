{
    "name": "riverside/php-orm",
    "description": "PHP ORM micro-library and query builder",
    "type": "library",
    "version": "2.0.0",
    "keywords": ["php", "orm", "pdo", "mysql", "database"],
    "homepage": "https://github.com/riverside/php-orm",
    "license": "MIT",
    "authors": [
        {
            "name": "Dimitar Ivanov",
            "email": "biggie@abv.bg",
            "homepage": "https://github.com/riverside",
            "role": "Developer"
        }
    ],
    "require": {
        "php": ">=7.1",
        "ext-pdo": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "8"
    },
    "autoload": {
        "psr-4": {
            "Riverside\\Orm\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Riverside\\Orm\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit"
    }
}
